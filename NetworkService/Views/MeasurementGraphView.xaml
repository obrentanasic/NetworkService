<UserControl x:Class="NetworkService.Views.MeasurementGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             mc:Ignorable="d" 
             Width="700" Height="700"
             FontFamily="Trebuchet MS">
    <UserControl.Resources>
        <ControlTemplate 
            x:Key="RoundedButtonTemplate" 
            TargetType="Button">
            <Border 
                x:Name="buttonBorder" 
                CornerRadius="3" 
                Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger 
                    Property="IsMouseOver" 
                    Value="true">
                    <Setter 
                        TargetName="buttonBorder"
                        Property="BorderBrush"
                        Value="LightBlue" />
                </Trigger>

                <Trigger 
                    Property="IsEnabled"
                    Value="False">
                    <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                    <Setter TargetName="buttonBorder" Property="BorderBrush" Value="DarkGray" />
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="130 20 70 20">
                <TextBlock 
                    Foreground="#949BA4" 
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold" 
                    Text="Entity:" 
                    Margin="0 0 15 0 "
                    ></TextBlock>
                <ComboBox 
                    Cursor="Hand"
                    ToolTip="Choose entity"
                    Width="120" 
                    Height="30"
                    ItemsSource="{Binding ComboBoxItems}"
                    SelectedItem="{Binding SelectedEntity, Mode=TwoWay}"
                    Margin="0 0 15 0 "
                    HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Center"
                    ></ComboBox>
                <Button 
                    Cursor="Hand"
                    ToolTip="Show entity"
                    Template="{StaticResource RoundedButtonTemplate}" 
                    Background="#333333"
                    Foreground="#fff" 
                    FontWeight="Bold"
                    BorderBrush="#000" 
                    Height="30" 
                    Width="100" 
                    Content="Show"
                    Command="{Binding ShowCommand}"
                    ></Button>
            </StackPanel>
            <Border 
                BorderBrush="#000" 
                BorderThickness="1"
                Margin="120 20 60 0"
                Height="502">
                <Canvas x:Name="GraphCanvas" Background="White" Height="500" Width="475" Margin="25,0,0,0">

                    <!-- Lines connecting circles -->
                    <ItemsControl ItemsSource="{Binding CircleMarkers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas  />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line X1="{Binding CenterX}" 
                                      Y1="{Binding CenterY}" 
                                      X2="{Binding NextX}" 
                                      Y2="{Binding NextY}" 
                                      Stroke="DarkSlateGray" 
                                      StrokeThickness="2"
                                />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Circles (markers) -->
                    <ItemsControl ItemsSource="{Binding CircleMarkers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="{Binding CmWidthAndHeight}" Height="{Binding CmWidthAndHeight}">
                                    <Ellipse Fill="{Binding CmColor}"
                                             Width="{Binding CmWidthAndHeight}"
                                             Height="{Binding CmWidthAndHeight}" />
                                    <TextBlock Text="{Binding CmValue}"
                                               Foreground="#333333"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Time labels -->
                    <ItemsControl ItemsSource="{Binding CircleMarkers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="480"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CmTime}"
                                           Foreground="#333333"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
